{
  "name": "@momsfriendlydevco/formatters",
  "version": "1.1.1",
  "description": "Collection of string formatters in ES6 format",
  "scripts": {
    "lint": "eslint lib",
    "test": "mocha"
  },
  "type": "module",
  "imports": {
    "#lib/*": "./lib/*.js"
  },
  "exports": {
    ".": "./lib/formatters.js",
    "./*": "./lib/*.js"
  },
  "main": "lib/formatters.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MomsFriendlyDevCo/formatters.git"
  },
  "author": "Matt Carter <matt@mfdc.biz>",
  "bugs": {
    "url": "https://github.com/MomsFriendlyDevCo/formatters/issues"
  },
  "homepage": "https://github.com/MomsFriendlyDevCo/formatters#readme",
  "engineStrict": true,
  "engines": {
    "node": ">=16.14.0"
  },
  "dependencies": {
    "@momsfriendlydevco/readable": "^1.2.1",
    "big-m": "^7.0.0",
    "javascript-time-ago": "^2.5.9"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "eslint": "^8.30.0",
    "mocha": "^10.2.0",
    "mocha-logger": "^1.0.8"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es6": true,
      "node": true,
      "mocha": true
    },
    "parserOptions": {
      "ecmaVersion": 13,
      "sourceType": "module"
    }
  }
}
